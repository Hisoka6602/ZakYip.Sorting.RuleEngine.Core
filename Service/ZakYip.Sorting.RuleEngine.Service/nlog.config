<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwConfigExceptions="true"
      internalLogLevel="Info"
      internalLogFile="./logs/internal-nlog.txt">

  <!-- 启用ASP.NET Core布局渲染器 -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- 定义变量 -->
  <variable name="logDirectory" value="./logs"/>

  <!-- 定义日志输出目标 -->
  <targets>
    <!-- 控制台输出 -->
    <target xsi:type="Console" name="console"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />

    <!-- 文件输出 - 所有日志 -->
    <target xsi:type="File" name="allfile"
            fileName="${logDirectory}/all-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
            archiveFileName="${logDirectory}/archives/all-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="7"
            concurrentWrites="true"
            keepFileOpen="false"
            encoding="utf-8" />

    <!-- 文件输出 - 仅应用程序日志（排除Microsoft.*） -->
    <target xsi:type="File" name="ownFile"
            fileName="${logDirectory}/app-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
            archiveFileName="${logDirectory}/archives/app-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="7"
            concurrentWrites="true"
            keepFileOpen="false"
            encoding="utf-8" />

    <!-- 文件输出 - 错误和严重错误 -->
    <target xsi:type="File" name="errorFile"
            fileName="${logDirectory}/error-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message}${newline}${exception:format=type,message,method,stacktrace:maxInnerExceptionLevel=5:innerFormat=shortType,message,method}"
            archiveFileName="${logDirectory}/archives/error-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="30"
            concurrentWrites="true"
            keepFileOpen="false"
            encoding="utf-8" />

    <!-- 文件输出 - 性能日志 -->
    <target xsi:type="File" name="performanceFile"
            fileName="${logDirectory}/performance-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message}"
            archiveFileName="${logDirectory}/archives/performance-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="7"
            concurrentWrites="true"
            keepFileOpen="false"
            encoding="utf-8" />

    <!-- 文件输出 - 下游分拣机通信日志（单独文件） -->
    <!-- File output - Downstream sorter communication logs (separate file) -->
    <target xsi:type="File" name="sorterCommFile"
            fileName="${logDirectory}/comm-sorter-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
            archiveFileName="${logDirectory}/archives/comm-sorter-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="30"
            concurrentWrites="true"
            keepFileOpen="false"
            encoding="utf-8" />

    <!-- 文件输出 - DWS设备通信日志（单独文件） -->
    <!-- File output - DWS device communication logs (separate file) -->
    <target xsi:type="File" name="dwsCommFile"
            fileName="${logDirectory}/comm-dws-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
            archiveFileName="${logDirectory}/archives/comm-dws-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="30"
            concurrentWrites="true"
            keepFileOpen="false"
            encoding="utf-8" />
  </targets>

  <!-- 定义日志路由规则 -->
  <rules>
    <!-- 所有日志写入文件 -->
    <logger name="*" minlevel="Trace" writeTo="allfile" />

    <!-- 跳过Microsoft框架的非关键日志 -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />
    
    <!-- 完全禁止Entity Framework Core的SQL语句日志 - 安全要求，防止SQL和表名泄露 -->
    <!-- 仅在异常（Error及以上级别）时记录数据库错误信息，用于调试 -->
    <logger name="Microsoft.EntityFrameworkCore.Database.Command" minlevel="Error" writeTo="errorFile" final="true" />
    <logger name="Microsoft.EntityFrameworkCore.*" maxlevel="Warning" final="true" />

    <!-- 应用程序日志 -->
    <logger name="ZakYip.*" minlevel="Debug" writeTo="ownFile" />

    <!-- 下游分拣机通信日志 - 单独文件记录所有通信内容 -->
    <!-- Downstream sorter communication logs - separate file for all communication -->
    <logger name="*.Communication.DownstreamTcpJsonServer" minlevel="Trace" writeTo="sorterCommFile" final="true" />
    <logger name="*.Adapters.Sorter.*" minlevel="Trace" writeTo="sorterCommFile" final="true" />
    <logger name="*.SorterAdapterManager" minlevel="Trace" writeTo="sorterCommFile" final="true" />

    <!-- DWS设备通信日志 - 单独文件记录所有通信内容 -->
    <!-- DWS device communication logs - separate file for all communication -->
    <logger name="*.Adapters.Dws.*" minlevel="Trace" writeTo="dwsCommFile" final="true" />
    <logger name="*.DwsAdapterManager" minlevel="Trace" writeTo="dwsCommFile" final="true" />

    <!-- 错误日志 - 包含完整异常信息用于调试 -->
    <logger name="*" minlevel="Error" writeTo="errorFile" />

    <!-- 性能日志 -->
    <logger name="*.Performance" minlevel="Info" writeTo="performanceFile" />

    <!-- 控制台输出 -->
    <logger name="*" minlevel="Info" writeTo="console" />
  </rules>
</nlog>
